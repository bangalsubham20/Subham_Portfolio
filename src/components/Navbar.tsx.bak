import React, { useState, useEffect, useRef } from 'react';
import { FiSun, FiMoon, FiMenu, FiX, FiDownload, FiGithub, FiLinkedin } from 'react-icons/fi';
import { gsap } from 'gsap';
import { useTheme } from './ThemeContext';
// import Lenis from '@studio-freight/lenis'; // unused

const Navbar: React.FC = () => {
  const [isMenuOpen, setIsMenuOpen] = useState<boolean>(false);
  const { isDark, toggleTheme } = useTheme();

  const navRef = useRef<HTMLDivElement | null>(null);
  const mobileMenuRef = useRef<HTMLDivElement | null>(null);

  useEffect(() => {
    gsap.fromTo(
      navRef.current,
      { y: -100, opacity: 0 },
      { y: 0, opacity: 1, duration: 1, ease: 'power2.out' }
    );
  }, []);

  useEffect(() => {
    if (isMenuOpen) {
      gsap.to(mobileMenuRef.current, {
        opacity: 1,
        visibility: 'visible',
        duration: 0.3,
        ease: 'power2.out',
      });
      gsap.fromTo(
        mobileMenuRef.current?.querySelectorAll('.menu-item'),
        { y: 20, opacity: 0 },
        { y: 0, opacity: 1, duration: 0.3, stagger: 0.1, delay: 0.1 }
      );
    } else {
      gsap.to(mobileMenuRef.current, {
        opacity: 0,
        visibility: 'hidden',
        duration: 0.3,
        ease: 'power2.out',
      });
    }
  }, [isMenuOpen]);

  const handleScrollTo = (id: string) => {
    setIsMenuOpen(false);
    const element = document.querySelector(id);
    if (element) {
      element.scrollIntoView({ behavior: 'smooth' });
    }
  };

  const navItems = [
    { name: 'Home', path: '#home' },
    { name: 'About', path: '#about' },
    { name: 'Experience', path: '#experience' },
    { name: 'Skills', path: '#skills' },
    { name: 'Open Source', path: '#github-activity' },
    { name: 'Projects', path: '#projects' },
    { name: 'Contact', path: '#contact' },
  ];

  return (
    <>
      <nav
        ref={navRef}
        className="fixed top-0 left-0 right-0 z-50 px-6 md:px-8 py-6 bg-gray-50/80 dark:bg-black/80 backdrop-blur-md border-b border-gray-200/50 dark:border-gray-800/50"
      >
        <div className="max-w-7xl mx-auto flex items-center justify-between">
          <button
            onClick={() => handleScrollTo('#home')}
            className="text-xl font-light tracking-wider z-50 relative"
          >
            <span className='text-red-600 font-bold'>SUBHAM </span>BANGAL
          </button>

          {/* Desktop Navigation */}
          <div className="hidden md:flex items-center space-x-8 lg:space-x-12">
            {navItems.map((item) => (
              <button
                key={item.name}
                onClick={() => handleScrollTo(item.path)}
                className="text-sm font-light tracking-wide text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors duration-300 relative group"
              >
                {item.name}
                <span className="absolute -bottom-1 left-0 h-px w-0 bg-red-500 dark:bg-red-900 group-hover:w-full transition-all duration-300"></span>
              </button>
            ))}
          </div>

          <div className="flex items-center space-x-4">
            <a
              href="/Subham_Bangal_Resume.pdf"
              download
              className="hidden md:flex items-center space-x-2 px-4 py-2 text-sm font-light tracking-wide border border-gray-300 dark:border-gray-700 hover:bg-gray-900 dark:hover:bg-gray-100 hover:text-white dark:hover:text-gray-900 rounded-full transition-all duration-300"
            >
              <FiDownload size={16} />
              <span>Resume</span>
            </a>

            <button
              onClick={toggleTheme}
              className="p-2 hover:bg-gray-200 dark:hover:bg-gray-800 rounded-full transition-colors duration-300"
              aria-label="Toggle theme"
            >
              {isDark ? <FiSun size={18} /> : <FiMoon size={18} />}
            </button>

            {/* Mobile Menu Button */}
            <button
              onClick={() => setIsMenuOpen(!isMenuOpen)}
              className="md:hidden p-2 hover:bg-gray-200 dark:hover:bg-gray-800 rounded-full transition-colors duration-300 z-50 relative"
              aria-label="Toggle menu"
            >
              {isMenuOpen ? <FiX size={18} /> : <FiMenu size={18} />}
            </button>
          </div>
        </div>
      </nav>

      {/* Mobile Menu */}
      <div
        ref={mobileMenuRef}
        className="fixed inset-0 z-40 bg-white dark:bg-zinc-950 flex flex-col items-center justify-center opacity-0 invisible"
      >
        <div className="flex flex-col items-center space-y-8">
          {navItems.map((item) => (
            <button
              key={item.name}
              onClick={() => handleScrollTo(item.path)}
              className="menu-item text-3xl font-light tracking-wide text-gray-900 dark:text-gray-100 hover:text-red-600 dark:hover:text-red-500 transition-colors duration-300"
            >
              {item.name}
            </button>
          ))}

          <div className="menu-item pt-8 flex gap-6">
            <a href="https://github.com/bangalsubham20" target="_blank" rel="noreferrer" className="p-3 rounded-full border border-gray-200 dark:border-zinc-800 hover:border-red-500 transition-colors">
              <FiGithub size={24} />
            </a>
            <a href="https://www.linkedin.com/in/bangalsubham20/" target="_blank" rel="noreferrer" className="p-3 rounded-full border border-gray-200 dark:border-zinc-800 hover:border-red-500 transition-colors">
              <FiLinkedin size={24} />
            </a>
          </div>

          <a
            href="/Subham_Bangal_Resume.pdf"
            download
            className="menu-item flex items-center space-x-2 text-xl font-light tracking-wide mt-4 hover:text-red-500 transition-colors"
          >
            <FiDownload size={20} />
            <span>Download Resume</span>
          </a>

        </div>
      </div>
    </>
  );
};

export default Navbar;